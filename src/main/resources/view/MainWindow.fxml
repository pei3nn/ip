<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane
    prefWidth="800"
    prefHeight="600"
    style="-fx-background-color: linear-gradient(to bottom, #8e7cc3, #f4b183);"
    xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="finixx.gui.MainWindow">
    <children>
        <TextField
            fx:id="userInput"
            layoutY="558.0"
            onAction="#handleUserInput"
            prefHeight="40.0"
            prefWidth="320.0"
            promptText="Input here"
            AnchorPane.bottomAnchor="1.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="76.0"/>
        <Button
            fx:id="sendButton"
            layoutX="324.0"
            layoutY="558.0"
            mnemonicParsing="false"
            onAction="#handleUserInput"
            prefHeight="40.0"
            prefWidth="80.0"
            text="Send"
            textAlignment="CENTER"
            textFill="#000000"
            AnchorPane.bottomAnchor="1.0"
            AnchorPane.rightAnchor="0.0">
        <font>
                <Font name="Avenir Black" size="14.0"/>
            </font>
            <effect>
                <InnerShadow blurType="TWO_PASS_BOX" radius="7.789999999999999" width="12.16"/>
            </effect>
        </Button>
        <ScrollPane
            fx:id="scrollPane"
            fitToWidth="true"
            hbarPolicy="NEVER"
            hvalue="1.0"
            vvalue="1.0"
            style="-fx-background: transparent; -fx-background-color: transparent;"
            AnchorPane.bottomAnchor="43.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0">
            <content>
                <VBox
                    fx:id="dialogContainer"
                    style="-fx-background-color: transparent;"
                />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root
    alignment="TOP_RIGHT"
    spacing="10"
    type="javafx.scene.layout.HBox"
    xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label
            fx:id="dialog"
            lineSpacing="0.3"
            text="text"
            wrapText="true">
            <font>
                <Font name="ArimaKoshi-Regular" size="14.0"/>
            </font>
            <padding>
                <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </Label>
        <ImageView
            fx:id="displayPicture"
            fitHeight="60.0"
            fitWidth="60.0"
            pickOnBounds="true"
            preserveRatio="true">
            <image>
                <Image url="@../images/DaUser.png"/>
            </image>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="3.0" left="5.0" right="5.0" top="3.0"/>
    </padding>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</fx:root>
